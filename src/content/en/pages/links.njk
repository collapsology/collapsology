---
permalink: /{{ locale }}/links/index.html
translationKey: "linksPage"
pageTitle: "Websites and links"
pageIntro: "Our selection of links and sites. All of them focus on one or more of the various topics and scientific disciplines that inspired the collapsology approach."
---

{% extends "layouts/base.njk" %}

{% set metaTitle = pageTitle %}
{% set metaDescription = pageIntro %}
{% set metaImage = site.baseUrl ~ "/assets/img/social_media.jpg" %}
{% set currentSectionId = "links" %}

{% from "macros/linkItem.njk" import linkItem %}

{% block content %}
<main>
  <div class="c-pagesection  c-pagesection--dark  u-padding-top-xl">
    <div class="l-container  l-container--narrow">

      <h1 class="c-h1  c-h1--invert">{{ pageTitle }}</h1>
      <p class="c-pageintro">{{ pageIntro }}</p>

    </div>
  </div>

  {% set linksByTypes = collections.linksByTypes_en %}
  {% for type, links in linksByTypes %}
    <div class="c-pagesection  c-pagesection--border">
      <div class="l-container  l-container--narrow">

        <h2 class="c-smalltitle  u-margin-bottom-xl">{{ type }}</h2>
        {% for link in links %}
          {% if loop.first %}<ul class="l-grid  l-grid--gap  l-grid--2cols@medium">{% endif %}
            <li>
              {{ linkItem(
                url = link.data.url,
                title = link.data.title,
                content = link.templateContent | safe
              ) }}
            </li>
          {% if loop.last %}</ul>{% endif %}
        {% endfor %}

      </div>
    </div>
  {% endfor %}

</main>
{% endblock %}
